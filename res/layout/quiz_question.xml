<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_bg" >

    <RelativeLayout
        android:id="@+id/rl_intro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:paddingLeft="5dip" >

        <ImageView
            android:id="@+id/avatar_gmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:src="@drawable/avatar_gmes" />

        <TextView
            android:id="@+id/txt_gmes_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@id/avatar_gmes"
            android:shadowColor="@color/black"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text="Hi! I&apos;m GMES and I have a question for you about Frascati, Italy."
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_answer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_intro"
        android:layout_marginTop="10dip" >

        <ImageView
            android:id="@+id/avatar_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:src="@drawable/avatar_small" />

        <TextView
            android:id="@+id/txt_avatar_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@id/avatar_small"
            android:text="Hello! That&apos;s where I am!"
            android:shadowColor="@color/black"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="@color/orange"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_answer"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dip"
        android:layout_marginTop="30dip"
        android:paddingLeft="5dip" >

        <ImageView
            android:id="@+id/avatar_gmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:src="@drawable/avatar_gmes" />

        <TextView
            android:id="@+id/txt_gmes_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@id/avatar_gmes"
            android:shadowColor="@color/black"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text="Is the air you are breathing now more or less polluted than before?"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/img_answer_1"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1.0"
            android:padding="10dip"
            android:src="@drawable/arrow_up_selector" />

        <ImageView
            android:id="@+id/img_answer_2"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1.0"
            android:padding="10dip"
            android:src="@drawable/arrow_normal_selector" />

        <ImageView
            android:id="@+id/img_answer_3"
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1.0"
            android:padding="10dip"
            android:src="@drawable/arrow_down_selector" />
    </LinearLayout>

</RelativeLayout>